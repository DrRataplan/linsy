<!-- 
 para parametric binary tree
 &gt; and &lt; will scale following symbols
-->
<system iterations="7">
    <axiom>@</axiom>
    <grammar>
        <variable symbol="A">&lt;A&gt;</variable>
        <variable symbol="@">A[+&gt;@]-&gt;@</variable>
        <terminal symbol="&lt;"/>
        <terminal symbol="&gt;"/>
        <terminal symbol="["/>
        <terminal symbol="]"/>
        <terminal symbol="+"/>
        <terminal symbol="-"/>
    </grammar>
    <render viewBox="0 0 800 800">
        <style>
           .circle { fill: orange; }
           .line { stroke:brown; }
        </style>
        <state x="400" y="800" velocity="56" acceleration="1.34" angle="38" orientation="90"/>
    </render>
</system>